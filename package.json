{
	"name": "ripple-router",
	"version": "0.4.5",
	"description": "A lightweight router for ripple applications",
	"type": "module",
	"engines": {
		"node": ">=20.0.0"
	},
	"scripts": {
		"build": "pnpm build:vite && pnpm build:tsc",
		"build:vite": "vite build",
		"build:tsc": "tsc",
		"prepack": "pnpm build",
		"format": "prettier --write .",
		"format:check": "prettier --check ."
	},
	"main": "./dist/index.js",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"keywords": [
		"typescript",
		"ripple",
		"routing",
		"router"
	],
	"author": {
		"name": "Michal Makowski",
		"email": "michal.makowski97@gmail.com"
	},
	"license": "MIT",
	"devDependencies": {
		"prettier": "^3.6.2",
		"prettier-plugin-ripple": "0.2.36",
		"ripple": "^0.2.70",
		"typescript": "^5.9.2",
		"vite": "^7.1.5",
		"vite-plugin-ripple": "0.2.36"
	},
	"peerDependencies": {
		"ripple": "^0.2.70"
	}
}
