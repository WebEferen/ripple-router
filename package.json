{
	"name": "ripple-router",
	"version": "1.0.1",
	"description": "A lightweight router for ripple applications",
	"type": "module",
	"engines": {
		"node": ">=20.0.0"
	},
	"scripts": {
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"docs:deploy": "pnpm --filter ripple-router-docs docs:deploy"
	},
	"main": "./src/index.ts",
	"exports": {
		".": {
			"import": "./src/index.ts",
			"types": "./src/index.ts"
		}
	},
	"files": [
		"src"
	],
	"keywords": [
		"typescript",
		"ripple",
		"routing",
		"router"
	],
	"author": {
		"name": "Michal Makowski",
		"email": "michal.makowski97@gmail.com"
	},
	"license": "MIT",
	"devDependencies": {
		"prettier": "^3.6.2",
		"prettier-plugin-ripple": "0.2.152"
	},
	"peerDependencies": {
		"ripple": "0.2.188"
	}
}
